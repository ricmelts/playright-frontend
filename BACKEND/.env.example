# ================================
# PlayRight Backend Configuration
# ================================

# Environment
ENVIRONMENT=development
DEBUG=true

# API Server
PORT=3001
SECRET_KEY=your-super-secret-key-change-in-production
FRONTEND_URL=http://localhost:3000

# CORS Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,*.playright.ai
CORS_ORIGINS=http://localhost:3000,https://app.playright.ai

# ================================
# PocketBase Configuration
# ================================
POCKETBASE_URL=http://localhost:8090
POCKETBASE_ADMIN_EMAIL=admin@playright.ai
POCKETBASE_ADMIN_PASSWORD=change-this-secure-password
PB_ENCRYPTION_KEY=pb-encryption-key-32-chars-long

# ================================
# AI & ML Configuration
# ================================
AI_ENGINE_URL=http://localhost:8000
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MATCHING_THRESHOLD=0.7
MODEL_CACHE_DIR=./model_cache

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# Social Media APIs
# ================================

# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your-instagram-app-id
INSTAGRAM_CLIENT_SECRET=your-instagram-app-secret

# TikTok for Business API
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Twitter API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key

# ================================
# Payment Processing
# ================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ================================
# Email Service
# ================================
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@playright.ai
EMAIL_FROM_NAME=PlayRight Team

# SendGrid Template IDs
EMAIL_TEMPLATE_WELCOME=d-welcome-template-id
EMAIL_TEMPLATE_DEAL_UPDATE=d-deal-update-template-id
EMAIL_TEMPLATE_MATCH_NOTIFICATION=d-match-notification-template-id

# ================================
# File Storage & CDN
# ================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=playright-uploads
CDN_BASE_URL=https://cdn.playright.ai

# ================================
# Monitoring & Logging
# ================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
RATE_LIMIT_ENABLED=true

# ================================
# Security
# ================================
CORS_ALLOW_CREDENTIALS=true
TRUSTED_PROXIES=127.0.0.1,::1
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# ================================
# Background Jobs
# ================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Job Schedules (in seconds)
METRICS_SYNC_INTERVAL=3600
TRENDING_UPDATE_INTERVAL=1800
ANALYTICS_GENERATION_INTERVAL=86400

# ================================
# Database Backup
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=playright-backups

# ================================
# Feature Flags
# ================================
FEATURE_AI_MATCHING=true
FEATURE_SOCIAL_SYNC=true
FEATURE_PAYMENT_PROCESSING=false
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=false

# ================================
# Development & Testing
# ================================
MOCK_SOCIAL_APIS=true
MOCK_PAYMENT_APIS=true
ENABLE_API_DOCS=true
ENABLE_DEBUG_LOGGING=true