# API Server Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3001
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# CORS and Security
FRONTEND_URL=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1,*.playright.ai
CORS_ORIGINS=http://localhost:3000,https://app.playright.ai

# PocketBase
POCKETBASE_URL=http://localhost:8090
POCKETBASE_ADMIN_EMAIL=admin@playright.ai
POCKETBASE_ADMIN_PASSWORD=change-this-password

# AI Engine
AI_ENGINE_URL=http://localhost:8000
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Social Media APIs
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Payment Processing  
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Service
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@playright.ai

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=playright-uploads

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# AI Configuration
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MATCHING_THRESHOLD=0.7